<%= render "percent/common" %>
<br><br><br><br>
<div class="container">
  <%= render "post1/navbar" %>
    <form action = "/post1/update/<%=@post.id%>" method="post" >
      <div class="form-group">
        <label for="exampleFormControlInput1">제목</label>
        <input name="title" type="text" value="<%=@post.title%>" class="form-control" id="exampleFormControlInput1" >
      </div>
    
      <div class="form-group">
        <label for="exampleFormControlTextarea1">내용</label>
        <textarea name="content" class="form-control" id="exampleFormControlTextarea1" rows="10" ><%=@post.content%></textarea>
      </div>
    
        
       <a href="/post1/index">목록</a>
       <div style="text-align:right">
         <button class="asd" type="submit">저장</button>
       </div>
    
    </form>

</div>
</div>

<style>
@import url(https://fonts.googleapis.com/css?family=BenchNine:700);
.asd {
  background-color: #acd1e4;
  border: none;
  color: #ffffff;
  cursor: pointer;
  display: inline-block;
  font-family: 'BenchNine', Arial, sans-serif;
  font-size: 1em;
  font-size: 15px;
  line-height: 1em;
  margin: 1px 10px;
  outline: none;
  padding: 12px 20px 10px;
  position: relative;
  text-transform: uppercase;
  font-weight: 700;
}
.asd:before,
.asd:after {
  border-color: transparent;
  -webkit-transition: all 0.25s;
  transition: all 0.25s;
  border-style: solid;
  border-width: 0;
  content: "";
  height: 24px;
  position: absolute;
  width: 24px;
}
.asd:before {
  border-color: #acd1e4;
  border-right-width: 2px;
  border-top-width: 2px;
  right: -5px;
  top: -5px;
}
.asd:after {
  border-bottom-width: 2px;
  border-color: #acd1e4;
  border-left-width: 2px;
  bottom: -5px;
  left: -5px;
}
.asd:hover,
.asd.hover {
  background-color: #acd1e4;
}
.asd:hover:before,
.asd.hover:before,
.asd:hover:after,
.asd.hover:after {
  height: 100%;
  width: 100%;
}
</style>