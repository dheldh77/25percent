<br><br><Br><br>
<div class="container">
  <%= render "post1/navbar" %>
    <h1><%=@post.title%></h1>
    <p>추천수 : <%=@post.like%></p>
    <hr/>
    <div style="text-align:right;">
        <!--to_s:문자열로 변환,+기준으로 나눠서,첫번째-->
        <div><%=@post.created_at.to_s.split("+").first%>, <%=time_ago_in_words(@post.created_at)%> ago</div>
        <div><%=@post.user.username%></div>
       
        <a href="/post1/edit/<%=@post.id%>" class="chang"><strong>수정</strong></a>
        <a href="/post1/destroy/<%=@post.id%>" class="btn_x"><strong>삭제</strong></a>
     
    </div>
    <p><%= simple_format(@post.content)%></p>
    <% unless @post.image.nil? %>
        <%= image_tag @post.image %>
    <%end%>
    
    <div style="text-align:right">
    <a href="/post1/index" class="btn_l"><font size="4em"><strong>목록</strong></font></a></div><br>
    <form action = "/post1/like/<%=@post.id%>">
      
      <button type="submit" class = "btn_reconmend">추천</button></a>
      
    </form>
    <hr>
    <% @post.post1_reply1s.each do |r| %>
        <p><%=r.user.username%> : <%=r.content%></p>
        <a href="/post1_reply1/destroy/<%=r.id%>">삭제</a>
        <hr>
    <%end%>
    
    
    <form action="/post1_reply1/create" method="post">
        <div class="input-group">
          <input name="post_id" value="<%=@post.id%>" hidden="true">
          <textarea name="content" class="form-control col-11" id="exampleFormControlTextarea1" rows="3"  style="border:2px solid #ebe4d5" placeholder="댓글작성"></textarea>
          <span class="input-group-btn">
          <button type="submit" class="btn btn-dark" >댓글 작성</button>
          </span>
        </div>
    </form> 
    

    
    <div>
        <table class="table table-borderless" margin-left="auto">
          <tbody>
            <tr>
              <td>이전글</td></td>
              <% if @predecessor == -1 %>
                  <td>이전 글이 없습니다.</td>
              <% else %>
                  <td><a href="/post1/show/<%= @predecessor_post_id %>"><%= @predecessor_post_title %></a></td>
              <% end %>
            </tr>
            <tr>
              <td>다음글</td>
              <% if @successor == -1 %>
              
                  <td>다음 글이 없습니다.</td>
              <% else %>
                  <td><a href="/post1/show/<%= @successor_post_id %>"><%= @successor_post_title %></a></td>
              <% end %>
            </tr>
            
          </tbody>
        </table>
    </div>
</div>
</div>


<style>
.bg-animate-color {
  animation: random-bg .5s linear infinite;
}

@keyframes random-bg {
  from {
    filter: hue-rotate(0);
  }
  to {
    filter: hue-rotate(360deg);
  }
}

.btn_reconmend {
  background-color: #d5f0eb !important;
  color: white;
  padding: 20px 20px;
  border: none;
  transition: all .3s ease;
  border-radius: 5px;
  letter-spacing: 2px;
  text-transform: uppercase;
  outline: none;
  align-self: center;
  cursor: pointer;
  font-weight: bold;
}

.btn_reconmend:hover {
  animation: random-bg .5s linear infinite, grow 1300ms ease infinite;
}

.start-fun {
  background-color: #fff !important;
  color: salmon !important;
}
@keyframes grow {
  0% {
    transform: scale(1);
  }
  14% {
    transform: scale(1.1);
  }
  28% {
    transform: scale(1);
  }
  42% {
    transform: scale(1.1);
  }
  70% {
    transform: scale(1);
  }
}
</style>

